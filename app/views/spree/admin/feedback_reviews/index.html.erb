<% content_for :page_title do %>
  <%= link_to t('feedback_review_for', :review => @review.title ), admin_reviews_path %>
<% end %>


<table class="index">
  <tr>
    <th><%= t('date_') %></th>
    <th><%= t('user') %></th>
    <th><%= t('stars') %></th>
    <th></th>
  </tr>
  <% @collection.each do |feedback| %>
    <tr id="<%= dom_id(feedback) %>">
      <td><%= l feedback.created_at %></td>
      <td><%= feedback.user.try(:login) || "anonimus" %></td>
      <td><%= feedback.rating %></td>
      <td class="actions">
        <%= link_to_delete feedback  %>
      </td>
    </tr>
  <% end %>
</table>
